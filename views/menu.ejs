<%- include('./partials/header') %>

<main class="container my-5">
  <h2 class="mb-4 text-center">Cardápio da Semana</h2>

  <!-- Abas -->
  <ul class="nav nav-tabs justify-content-center mb-4" id="cardapioTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="almoco-tab" data-bs-toggle="tab" data-bs-target="#almoco" type="button" role="tab">Almoço</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="merenda-tab" data-bs-toggle="tab" data-bs-target="#merenda" type="button" role="tab">Merenda</button>
    </li>
  </ul>

  <!-- Conteúdo das abas -->
  <div class="tab-content" id="cardapioTabsContent">

    <!-- Almoço -->
    <div class="tab-pane fade show active" id="almoco" role="tabpanel">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
        <% const almocos = [
        {
          dia: 'Segunda-feira',
          prato: 'Frango grelhado',
          itens: ['Arroz branco', 'Feijão preto', 'Purê de batata'],
          imagem: '/images/images.jpeg'
        },
        {
          dia: 'Terça-feira',
          prato: 'Carne de panela',
          itens: ['Arroz branco', 'Feijão carioca', 'Salada mista'],
          imagem: '/images/almoco-terca.jpg.webp'
        },
        {
          dia: 'Quarta-feira',
          prato: 'Peixe assado',
          itens: ['Arroz branco', 'Farofa', 'Legumes no vapor'],
          imagem: '/images/almoco-quarta.jpg'
        },
        {
          dia: 'Quinta-feira',
          prato: 'Estrogonofe de frango',
          itens: ['Arroz branco', 'Batata palha', 'Feijão preto'],
          imagem: '/images/almoco-quinta.jpg.avif'
        },
        {
          dia: 'Sexta-feira',
          prato: 'Macarronada à bolonhesa',
          itens: ['Macarrão cozido', 'Molho de tomate', 'Carne moída'],
          imagem: '/images/almoco-sexta.jpeg'
        }
      ]; %>
       %>

        <% almocos.forEach(d => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body text-center bg-light">
                <h5 class="card-title mb-1"><%= d.dia %></h5>
              </div>
              <img src="<%= d.imagem %>" class="card-img-top imagem-refeicao" alt="Imagem do almoço">
              <div class="card-body text-center">
                <h6><%= d.prato %></h6>
              </div>
              <ul class="list-group list-group-flush">
                <% d.itens.forEach(item => { %>
                  <li class="list-group-item"><%= item %></li>
                <% }) %>
              </ul>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Merenda -->
    <div class="tab-pane fade" id="merenda" role="tabpanel">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
        <% const merendas = [
  {
    dia: 'Segunda-feira',
    itens: ['Cuscuz com queijo', 'Leite quente'],
    imagem: '/images/merenda-segunda.jpeg'
  },
  {
    dia: 'Terça-feira',
    itens: ['Baião com frango', 'Banana'],
    imagem: '/images/merenda-terca.jpeg'
  },
  {
    dia: 'Quarta-feira',
    itens: ['Risoto de carne moída', 'Goiaba'],
    imagem: '/images/merenda-quarta.jpg'
  },
  {
    dia: 'Quinta-feira',
    itens: ['Cuscuz com ovos', 'Tangerina'],
    imagem: '/images/merenda-quinta.jpeg'
  },
  {
    dia: 'Sexta-feira',
    itens: ['Sanduíche de ovos', 'Suco de caju'],
    imagem: '/images/merenda-sexta.jpg'
  }
]; %>


        <% merendas.forEach(m => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body text-center bg-light">
                <h5 class="card-title mb-1"><%= m.dia %></h5>
              </div>
              <img src="<%= m.imagem %>" class="card-img-top imagem-refeicao" alt="Imagem da merenda">
              <ul class="list-group list-group-flush">
                <% m.itens.forEach(item => { %>
                  <li class="list-group-item"><%= item %></li>
                <% }) %>
              </ul>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </div>
</main>
<style> 
  .imagem-refeicao {
  height: 160px;
  object-fit: cover;
}
</style>

<%- include('./partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
